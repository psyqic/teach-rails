<h1>Take attendance</h1>

<%= form_for(@users) do |f| %>

  <p>
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </p>
  <p>
    <%= f.label :u %><br />
    <%= f.date_select :name %>
  </p>
 <p>
    <% @users.each do | user | %>
      <%= check_box_tag  "attendance[user_ids][]", user.id %>
      <%= user.first_name + " " user.last_name %>
    <% end %>
  </p>
 
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', attendances_path %>
