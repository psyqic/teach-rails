<h1>Taking attendance</h1>

<%= form_for(@attendance) do |f| %>
  <%= f.hidden_field :user_id, :value => session[:user_id] %>
  <%= f.hidden_field :date, :value => Date.today %> 
  <p>
    Date: <%= @attendance.date %>
  </p>
  <p>    
    Taken by <%= @attendance.user.first_name + " " + @attendance.user.last_name %>
  </p>
 <p>
    <% @users.each do | user | %>
      <%= check_box_tag  "attendance[user_ids][]", user.id %>
      <%= user.first_name + " " + user.last_name %> </br>
    <% end %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', attendances_path %>
 
